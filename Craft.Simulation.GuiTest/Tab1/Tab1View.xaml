<UserControl x:Class="Craft.Simulation.GuiTest.Tab1.Tab1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Craft.Simulation.GuiTest.Tab1"
             xmlns:scrollFree="clr-namespace:Craft.UIElements.Geometry2D.ScrollFree;assembly=Craft.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:Tab1ViewModel}">
    <Grid>
        <scrollFree:GeometryEditorView DataContext="{Binding GeometryEditorViewModel}"/>

        <StackPanel>
            <Button Content="{Binding StartResumeButtonText}"
                    Width="60" Height="20" Margin="10"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Command="{Binding StartAnimationCommand}"/>
            <Button Content="Pause" Width="60" Height="20" Margin="10, 0, 10, 10"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Command="{Binding PauseAnimationCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
